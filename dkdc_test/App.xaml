<Application x:Class="dkdc_test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dkdc_test"
                       xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                          xmlns:convert="clr-namespace:dkdc_test.Components.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary/>
                <ui:ThemesDictionary Theme="Light"/>
            </ResourceDictionary.MergedDictionaries>

            <convert:ConnectSttToBtnString x:Key="connectSttToBtnStr"/>
            <convert:InverBool x:Key="invertBoolConverter"/>
            <convert:BoolToPrimaryString x:Key="boolToPrimaryStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
